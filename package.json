{
    "name": "@genx/config",
    "version": "1.0.3",
    "description": "An environment-aware config system.",
    "main": "lib/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "prettier": "prettier --write . --ignore-unknown",
        "lint": "eslint \"src/**/*.js\"",
        "lint:fix": "eslint --fix \"src/**/*.js\"",
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './doc' -r --verbose ./src",
        "jison": "jison ./src/lang/grammar/oolong.jison -o ./src/lang/grammar/oolong.js && npm run build",
        "test:unit": "mocha --recursive src/**/*.spec.js",
        "test": "npm run clean && mocha --reporter mocha-multi --reporter-options mocha-multi=test/mocha-multi-reporters.json test/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha test/*.mocha.js --recursive src/**/*.spec.js",
        "clean": "del-cli lib .nyc_output coverage allure-results",
        "build": "npm run clean && NODE_ENV=production babel src -d lib --ignore \"**/__test__/*.js\" --source-maps --copy-files --no-copy-ignored"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/genx-tech/gx-config.git"
    },
    "keywords": [
        "config"
    ],
    "author": "Rockie Guo",
    "license": "MIT",
    "nyc": {
        "exclude": [
            "babel.config.js",
            "test",
            "lib",
            "**/*.spec.js"
        ]
    },
    "bugs": {
        "url": "https://github.com/genx-tech/gx-config/issues"
    },
    "homepage": "https://github.com/genx-tech/gx-config#readme",
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/eslint-parser": "^7.16.5",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/preset-env": "^7.15.0",
        "@babel/register": "^7.15.3",
        "@genx/babelnode": "^7.14.9",
        "allure-mocha": "^2.0.0-beta.14",
        "babel-plugin-source-map-support": "^2.1.3",
        "del-cli": "^4.0.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.1.0",
        "ink-docstrap": "^1.3.2",
        "jsdoc": "^3.6.6",
        "mocha": "^9.1.1",
        "mocha-multi": "^1.1.5",
        "nyc": "^15.1.0",
        "prettier": "^2.3.2",
        "should": "^13.2.3",
        "source-map-support": "^0.5.19"
    },
    "dependencies": {
        "@genx/july": "*",
        "@genx/sys": "*"
    },
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "eslintConfig": {
        "parser": "@babel/eslint-parser",
        "extends": [
            "standard",
            "prettier"
        ]
    },
    "eslintIgnore": [
        "/**/__test__"
    ]
}
